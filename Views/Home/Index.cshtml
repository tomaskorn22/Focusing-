@{
    ViewData["Title"] = "Index";
}
<header class="header">
    <div class="logo">
         <a href='@Url.Action("Index")'>
        <img src="~/img/logo.png" alt="Logo">
    </div>
    <nav class="nav-menu">
        <a href='@Url.Action("Index")'>Tablero</a>
        <a href='@Url.Action("ListaTips")'>Tips</a>
        <a href='@Url.Action("Calendario")'>Calendario</a>
        <a href='@Url.Action("ListaJuegos")'>Juegos</a>
        <a href='@Url.Action("ListaMelodias")'>Melodía</a>
        <a href="#">Foro</a>
        <a href="#">Progreso</a>
        <a href='@Url.Action("Perfil")'>Perfil</a>
    </nav>
    <div class="profile-icon">
        <a href='@Url.Action("InicioSesion")'>
        <img src="~/img/avatar.png" alt="Avatar de Usuario" class="avatar">
        </a>
    </div>
</header>

<div class="container" style="min-width: 100vw;">
    <h1>MI TABLERO</h1>
    <h3>¿Cómo te sentís hoy?</h3>
        
    <div class="sentimientos">
   @if (ViewBag.Sentimientos != null && ViewBag.Sentimientos.Count > 0)
{
    <ul class="listaImagenes d-flex">
        @foreach (Sentimientos sentimiento in ViewBag.Sentimientos)
        {
            <li>
                <img src="@sentimiento.foto" alt="@sentimiento.nombre" style="max-width: 100px; height: auto;" />
                <p>@sentimiento.nombre</p>
            </li>
        }
    </ul>
}
    </div>
    
    <div class="row">
        <div class="recordatorio">
            <h4>RECORDATORIO</h4>
            <ul>
                <li>Faltan 4 días para el tp de EFSI. ¡A estudiar!</li>
                <li>Faltan 6 días para la prueba de Educación Judía. ¡A estudiar!</li>
                <li>Faltan 10 días para la prueba de Inglés. ¡A estudiar!</li>
            </ul>
        </div>
        <div class="tareas">
            <h4>TPS/Tareas</h4>
            <ul>
                <li><span class="tachado">Prueba física 14/10</span></li>
                <li><input type="checkbox"> Tp EFSI 19/10</li>
                <li><input type="checkbox"> Prueba Judía 21/10</li>
                <li><input type="checkbox"> Prueba Inglés 25/10</li>
            </ul>
        </div>
    </div>
    <div class="timer-bigger-container">
        <div class="timer-container">
            <h1>Temporizador</h1>
            <div class="input-container">
                <label for="minutes">Minutos:</label>
                <input type="number" id="minutes" min="0" placeholder="0">
                <label for="seconds">Segundos:</label>
                <input type="number" id="seconds" min="0" max="59" placeholder="0">
            </div>
            <button id="startButton">Iniciar</button>
            <div id="countdownDisplay">00:00</div>
        </div>
        
    </div>

    <h4>¿Qué materia querés estudiar?</h4>
    <input class="input-materia" type="text" placeholder="Escribí acá">
    <button>Enviar</button>
</div>

<script src="~/js/contador.js"></script>
